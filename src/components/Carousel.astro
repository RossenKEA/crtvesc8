    <div class="rail">
      <div class="slide">
        <a href="/harbo">
          <img src="/imgs/Slider_Harbo.png" alt="" />
          <div class="caption">
            <p class="type">Caf√© & Bar</p>
            <h1 class="name">HARBO BAR</h1>
          </div>
        </a>
      </div>
      <div class="slide">
        <a href="/glyptoteket">
          <img src="/imgs/Slider_Glypto.png" alt="" /><div class="caption">
            <p class="type">Museum</p>
            <h1 class="name">GLYPTOTEKET</h1>
          </div>
        </a>
      </div>
      <div class="slide">
        <a href="/jetaime">
          <img src="/imgs/Slider_jetaime.png" alt="" /><div class="caption">
            <p class="type">Restaurant</p>
            <h1 class="name">JE T'AIME</h1>
          </div>
        </a>
      </div>
      <div class="slide">
        <a href="/bibliotekshaven">
          <img src="/imgs/Slider_biblio.png" alt="" /><div class="caption">
            <p class="type">Park</p>
