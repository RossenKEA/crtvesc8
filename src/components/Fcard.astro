---
const { badge, imgsrc, title } = Astro.props;
---

<a class="card" href="/harbo">
  <div class="badge">{badge}</div>
  <img src={imgsrc} alt="card image" />
  <div class="card-title">{title}</div>
</a>

<style>
  .card {
    position: relative;
    display: block;
    border-radius: 16px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    scroll-snap-align: start;
    text-decoration: none;
    color: inherit;
  }
  .card img {
    width: 100%;
    /* height: 220px; */
    object-fit: cover;
    display: block;
  }
  .card-title {
    padding: 12px 14px 16px;
    font-weight: 800;
    letter-spacing: 0.02em;
  }
  .badge {
    position: absolute;
    top: 10px;
    left: 10px;
    font-size: 12px;
    background: #ffffffcc;
    backdrop-filter: saturate(150%) blur(8px);
    padding: 6px 10px;
    border-radius: 999px;
    font-weight: 700;
  }
</style>
